---
exclude_paths:
  - .github
  - atmosphere
  - charts
  - molecule
  - playbooks
  - plugins/filter
  - roles/defaults/vars/main.yml
  - roles/kube_prometheus_stack/files/jsonnet
  - roles/storpool_csi/files
  - zuul.d

mock_roles:
  - opendev.container_registry

skip_list:
  - jinja[invalid]
  - jinja[spacing]
  - var-naming[no-reserved]
  - var-naming[no-role-prefix]
  - yaml[line-length]
